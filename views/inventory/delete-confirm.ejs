<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors && !errors.isEmpty()) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
 
  <form id="deleteForm" action="/inv/delete" method="post">
    
    <!-- Vehicle Inputs -->
    <p>Confirm Deletion - The delete is permanent.</p>

    <div class="form-group"><label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make || '' %>" readonly></div>

    <div class="form-group"><label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model || '' %>" readonly></div>

    
    <div class="form-group"><label for="inv_year">Year</label>
      <input type="text" id="inv_year" name="inv_year" required value="<%= inv_year || '' %>" readonly></div>
      
    <div class="form-group"><label for="inv_price">Price</label>
    <input type="text" id="inv_price" name="inv_price" required value="<%= inv_price || '' %>" readonly></div>

    <button type="submit">Delete</button>

    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>

  <a href="/inv/management">Back to Inventory Management</a>