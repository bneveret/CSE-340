<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors && !errors.isEmpty()) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
 
  <form id="addInventoryForm" action="/inv/add-inventory" method="post">
    <!-- Classification Dropdown -->
    <label for="classificationList">Classification</label>
    <%- classificationList %>

    <!-- Vehicle Inputs -->

    <div class="form-group"><label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make || '' %>"></div>

    <div class="form-group"><label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model || '' %>"></div>

    <div class="form-group"><label for="inv_description">Description</label>
    <textarea id="inv_description" name="inv_description" required><%= inv_description || '' %></textarea></div>

    <div class="form-group"><label for="inv_image">Image Path</label>
    <input type="text" id="inv_image" name="inv_image" required value="<%- inv_image || '/images/vehicles/no-image.png' %>"></div>

    <div class="form-group"><label for="inv_thumbnail">Thumbnail Path</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%- inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"></div>

    <div class="form-group"><label for="inv_price">Price</label>
    <input type="text" id="inv_price" name="inv_price" required value="<%= inv_price || '' %>"></div>

    <div class="form-group"><label for="inv_year">Year</label>
    <input type="text" id="inv_year" name="inv_year" required value="<%= inv_year || '' %>"></div>

    <div class="form-group"><label for="inv_miles">Mileage</label>
    <input type="text" id="inv_miles" name="inv_miles" required value="<%= inv_miles || '' %>"></div>

    <div class="form-group"><label for="inv_color">Color</label>
    <input type="text" id="inv_color" name="inv_color" required value="<%= inv_color || '' %>"></div>

    <button type="submit">Add Vehicle</button>
  </form>

  <a href="/inv/management">Back to Inventory Management</a>